---
layout: layouts/base.njk
title: ARNOLOOG
---

<section class="home-grid">

  {# Loop door alle rolls in volgorde #}
  {% for rollName in photos.rollsList %}
    {% set roll = photos.rolls[rollName] %}

    {# Eerst GRID-fotoâ€™s tonen #}
    {% for img in roll.grid %}
      <div class="cell">
        <img src="{{ img }}" loading="lazy" />
      </div>
    {% endfor %}

    {# Dan de separator: 8 zwarte vakjes + trigger in het midden #}
    <div class="separator-grid">
      {% for i in [1,2,3,4] %}
        <div class="sep-block"></div>
      {% endfor %}

      <a href="/rolls/{{ rollName }}/" class="sep-trigger">
        <img src="{{ roll.trigger }}" alt="{{ rollName }}" />
      </a>

      {% for i in [1,2,3,4] %}
        <div class="sep-block"></div>
      {% endfor %}
    </div>
  {% endfor %}

</section>
