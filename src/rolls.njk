---
layout: layouts/base.njk
pagination:
  data: photos.rollsList
  size: 1
  alias: rollName
permalink: "rolls/{{ rollName }}/"
---

{% set roll = photos.rolls[rollName] %}

<article class="roll-page">
  <header class="roll-header">
    <h1 class="roll-title">{{ rollName }}</h1>
    <p class="roll-subtitle">Analog roll Â· {{ roll.full | length }} photos</p>
  </header>

  <section class="roll-gallery">
    {% for img in roll.full %}
      <figure class="roll-photo">
        <img src="{{ '/' | url }}{{ img }}" alt="" loading="lazy">
      </figure>
    {% endfor %}
  </section>
</article>
