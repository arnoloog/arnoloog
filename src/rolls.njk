---
layout: layouts/base.njk
pagination:
  data: photos.rollsList
  size: 1
  alias: rollName
permalink: "/rolls/{{ rollName }}/index.html"
---

{% set roll = photos.rolls[rollName] %}

<h1 class="roll-title">{{ rollName }}</h1>

<section id="grid" class="grid">
  {% for img in roll.grid %}
    <a 
      href="{{ img }}" 
      data-pswp-src="{{ img }}"
      data-pswp-width="1600"
      data-pswp-height="1200"
      class="grid-item"
    >
      <img src="{{ img }}" loading="lazy" alt="" />
    </a>
  {% endfor %}
</section>

<section class="full-gallery">
  {% for img in roll.full %}
    <a 
      href="{{ img }}" 
      data-pswp-src="{{ img }}"
      data-pswp-width="1600"
      data-pswp-height="1200"
    >
      <img src="{{ img }}" loading="lazy" />
    </a>
  {% endfor %}
</section>
